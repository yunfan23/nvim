FZF_OPTIONS+="--layout=reverse "
FZF_OPTIONS+="--info=inline "
FZF_OPTIONS+="--height=80% "
FZF_OPTIONS+="--multi "
FZF_OPTIONS+="--preview 'cat {}' "
FZF_OPTIONS+="--bind '?:toggle-preview' "
export FZF_DEFAULT_OPTS=$FZF_OPTIONS
